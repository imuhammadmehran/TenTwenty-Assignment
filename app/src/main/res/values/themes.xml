<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TenTwentyAssignment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_color_2</item>
        <item name="colorPrimaryVariant">@color/custom_color_2</item>
        <item name="colorOnPrimary">@color/custom_color_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_color_4</item>
        <item name="colorSecondaryVariant">@color/custom_color_4</item>
        <item name="colorOnSecondary">@color/custom_color_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>


    <style name="toolBarTitle">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="bottomNavigationTitleStyle">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="upComingMovieItemTitleStyle">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/custom_color_2</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>